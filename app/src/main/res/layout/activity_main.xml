<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EADFDF"
    >
    <TextView
    android:text="Login Here"
    android:textSize="50dp"
    android:textColor="#614691"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    />
    <TextView
        android:text="Enter Login ID"
        android:textSize="30dp"
        android:textColor="#4A3D61"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        />
    <EditText
        android:id="@+id/etId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:text="Enter Password"
        android:textSize="30dp"
        android:textColor="#4A3D61"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:weightSum="2"
        >
    <Button
        android:id="@+id/btnSignIn"
        android:text="Sign In"
        android:textSize="20dp"
        android:textColor="#442F6A"
        android:background="#ECB3A1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btnCancel"
        android:text="Cancel"
        android:textSize="20dp"
        android:background="#725F95"
        android:textColor="#ECB3A1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/tvRegistration"
        android:text="Click here for registration"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        />
</LinearLayout>
